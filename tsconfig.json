{
  "compilerOptions": {
    "target": "ES2020", // Modern JS features
    "module": "CommonJS", // Easier for Node.js
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true, // Allow default import of CJS modules
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
